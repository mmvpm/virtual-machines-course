-- This unit provides some convenient function-manipulation stuff.

import Ref;

public fun id (x) {
  x
}

public infixr $ after := (f, x) {
  f (x)
}

public infix # after * (f, g) {
  fun (x) {
    f (g (x))
  }
}

public fun fix (f) {
  var knot = ref ({});
  
  knot ::= fun (x) {f (deref (knot)) (x)};  

  deref (knot)
}